<%= render 'header' %>

<div class="profile-header box align-right effect1">
  <div class="profile-column">
    <h2><%= @user.email %>'s profile</h2>
  </div>

  <%= render 'dropdown' %>
</div>
<div class="profile-underheader">
</div>

<% @user.posts.order(created_at: :desc).each do |post| %>
<div class="box effect1">
  <header class="box-header">
    <h2><%= post.title %></h2>
  </header>
    <p><%= post.content %></p>
    <p><%= link_to post.user.email, user_path(post.user) %></p>
    <p><%= post.created_at.strftime("%A %B %Y") %></p>
  </div>
<% end %>
